<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:background="@drawable/new_login_credentials"
        android:layout_height="match_parent"
        tools:context=".Login">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="240dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_directions_bike_black_24dp"/>

            <com.google.android.gms.common.SignInButton
                    android:id="@+id/googlesignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_login"
                    android:textColor="#f16f7d"
                    android:textAllCaps="false"
                    android:padding="16dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_marginTop="100dp"
                    android:textSize="18sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Login Using Your Google Account"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#fff"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

            <Button
                    android:id="@+id/buttonkill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_signup"
                    android:text="Come Back Later"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:padding="16dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>